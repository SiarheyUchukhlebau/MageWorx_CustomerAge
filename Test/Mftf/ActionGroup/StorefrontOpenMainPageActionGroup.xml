<?xml version="1.0" encoding="UTF-8"?>
<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="StorefrontOpenMainPageActionGroup">
        <annotations>
            <description>Goes to the Storefront 'Home' page.</description>
        </annotations>

        <amOnPage url="{{StorefrontHomePage.url}}" stepKey="amOnHomePage"/>
        <waitForPageLoad stepKey="waitForHomePageLoad"/>
    </actionGroup>
</actionGroups>
